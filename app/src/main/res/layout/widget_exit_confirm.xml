  ~ 文件: widget_exit_confirm.xml
  ~ 描述: 退出确认视图布局
  ~
  ~ 布局结构：垂直LinearLayout（通过父视图设置），从上到下：
  ~ 1. 应用图标（ImageView）
  ~ 2. 应用名称（TextView）
  ~ 3. 应用版本信息（TextView）
  ~ 4. 系统信息（TextView）
  ~ 5. 设置按钮（Button）
  ~ 6. 退出按钮（Button）
  ~
  ~ 显示位置：屏幕左侧
  ~ 显示时机：用户按返回键时显示
  ~
  ~ 对应的代码文件：
  ~ - ExitConfirmView.kt (退出确认视图控制器)
  -->

<!--
  ~ 根容器：merge标签
  ~
  ~ 父视图：ExitConfirmView (继承自LinearLayout，垂直方向，居中对齐)
  ~
  ~ 优化：
  ~ - 减少一层ViewGroup嵌套
  ~ - 提高布局性能
  -->
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<!--
	  ~ 应用图标
	  ~
	  ~ 尺寸：100dp x 100dp
	  ~ 背景：应用图标（@drawable/ic_launcher）
	  ~
	  ~ 功能：
	  ~ - 显示应用的图标
	  ~ - 提供视觉识别
	  -->
	<ImageView
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:background="@drawable/ic_launcher" />

	<!--
	  ~ 应用名称
	  ~
	  ~ 宽度：wrap_content（自适应内容）
	  ~ 顶部边距：10dp（与图标保持间距）
	  ~ 文本：@string/app_name（应用名称）
	  ~
	  ~ 功能：
	  ~ - 显示应用的名称
	  ~ - 提供文字识别
	  -->
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="@string/app_name" />

	<!--
	  ~ 应用版本信息
	  ~
	  ~ 宽度：wrap_content
	  ~ 顶部边距：10dp
	  ~ 对齐：center（文本居中）
	  ~ 字体大小：12sp
	  ~
	  ~ 显示内容：
	  ~ - 应用版本号
	  ~ - X5内核版本号
	  ~
	  ~ 格式示例：
	  ~ "版本: 1.0.0
	  ~  X5: 44603"
	  ~
	  ~ 对应代码：ExitConfirmView.kt
	  ~ - init块中设置版本信息
	  -->
	<TextView
		android:id="@+id/tvAppInfo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:gravity="center"
		android:textSize="12sp" />

	<!--
	  ~ 系统信息
	  ~
	  ~ 宽度：wrap_content
	  ~ 底部边距：30dp（与按钮保持间距）
	  ~ 对齐：center（文本居中）
	  ~ 字体大小：12sp
	  ~
	  ~ 显示内容：
	  ~ - Android版本
	  ~
	  ~ 格式示例：
	  ~ "Android: 11"
	  ~
	  ~ 对应代码：ExitConfirmView.kt
	  ~ - init块中设置系统信息
	  -->
	<TextView
		android:id="@+id/tvSystemInfo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="30dp"
		android:gravity="center"
		android:textSize="12sp" />

	<!--
	  ~ 设置按钮
	  ~
	  ~ 宽度：wrap_content（自适应内容）
	  ~ 背景：@drawable/bg_item（带焦点状态）
	  ~ 文本："设置"
	  ~
	  ~ 功能：
	  ~ - 点击进入应用设置界面
	  ~ - 可以调整频道列表、加载时间等
	  ~
	  ~ 对应代码：ExitConfirmView.kt
	  ~ - 触发onUserSelection回调，传入Selection.SETTINGS
	  ~ - MainActivity切换到UiMode.APP_SETTINGS
	  -->
	<Button
		android:id="@+id/btnSettings"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_item"
		android:text="设置" />

	<!--
	  ~ 退出按钮
	  ~
	  ~ 宽度：wrap_content（自适应内容）
	  ~ 背景：@drawable/bg_item（带焦点状态）
	  ~ 文本："退出"
	  ~
	  ~ 功能：
	  ~ - 点击退出应用
	  ~ - 关闭MainActivity
	  ~
	  ~ 对应代码：ExitConfirmView.kt
	  ~ - 触发onUserSelection回调，传入Selection.EXIT
	  ~ - MainActivity调用finish()退出
	  -->
	<Button
		android:id="@+id/btnExit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_item"
		android:text="退出" />

</merge>
